{
  "include": [],
  "compilerOptions": {
    "target": "es6",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    // "isolatedModules": true,
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    // These options are necessary so that TypeDoc can resolve references across packages
    "declaration": true,
    "declarationMap": true
  }
}